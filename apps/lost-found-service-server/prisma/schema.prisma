datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  createdAt   DateTime        @default(now())
  description String?
  id          String          @id @default(cuid())
  name        String?
  qrCode      QrCode?         @relation(name: "ItemsOnQrCode", fields: [qrCodeId], references: [id])
  qrCodeId    String?
  qrCodes     QrCode[]        @relation(name: "ItemOnQrCodes")
  status      EnumItemStatus?
  updatedAt   DateTime        @updatedAt
  user        User?           @relation(fields: [userId], references: [id])
  userId      String?
}

model QrCode {
  code      String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  item      Item?    @relation(name: "ItemOnQrCodes", fields: [itemId], references: [id])
  itemId    String?
  items     Item[]   @relation(name: "ItemsOnQrCode")
  updatedAt DateTime @updatedAt
}

model Contact {
  address     String?
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  phoneNumber String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  contacts  Contact[]
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  items     Item[]
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

enum EnumItemStatus {
  Option1
}
